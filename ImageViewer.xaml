<Window
    x:Class="HourSync.ImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HourSync"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock Text="HourSync is beta software and bugs are possible. Report bugs at https://t.ly/I1i02" Canvas.ZIndex="5" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 10, 0, 0"/>
        <ScrollViewer x:Name="ScrollViewer">
            <Image x:Name="DisplayedImage" Stretch="Uniform" />
        </ScrollViewer>
        <TextBlock x:Name="Title" Style="{ThemeResource TitleTextBlockStyle}" Text="Loading image..." Margin="36" Canvas.ZIndex="1" VerticalAlignment="Top"/>
    </Grid>
</Window>